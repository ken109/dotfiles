{
  "tools": {
    "autoAccept": true,
    "allowed": [
      "web_fetch",
      "google_web_search",
      "run_shell_command(ls)",
      "run_shell_command(cat)",
      "run_shell_command(echo)",
      "run_shell_command(git branch --show-current)",
      "run_shell_command(git diff main...HEAD)",
      "run_shell_command(git log main..HEAD)",
      "run_shell_command(openspec validate)"
    ],
    "exclude": ["run_shell_command(git push)"]
  },
  "mcpServers": {
    "github": {
      "httpUrl": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer $GITHUB_MCP_PAT"
      },
      "includeTools": ["pull_request_read", "create_pull_request", "update_pull_request"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@automatalabs/mcp-server-playwright"]
    },
    "linear": {
      "httpUrl": "https://mcp.linear.app/mcp",
      "includeTools": ["get_issue", "get_issue_status", "list_issues"]
    },
    "vibe_kanban": {
      "command": "npx",
      "args": ["-y", "vibe-kanban@latest", "--mcp"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "$CONTEXT7_TOKEN"]
    }
  },
  "context": {
    "fileName": ["AGENTS.md", "GEMINI.md"],
    "fileFiltering": {
      "respectGitIgnore": false,
      "respectGeminiIgnore": true
    }
  },
  "ide": {
    "enabled": true,
    "hasSeenNudge": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    },
    "enablePermanentToolApproval": true
  },
  "general": {
    "vimMode": false,
    "enablePromptCompletion": false,
    "debugKeystrokeLogging": false,
    "previewFeatures": true
  },
  "output": {
    "format": "text"
  },
  "experimental": {
    "jitContext": true
  }
}
